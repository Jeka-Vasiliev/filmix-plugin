{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "node",
        "jsx": "react",
        "jsxFactory": "h",
        "lib": [
            "esnext",
            "dom"
        ],
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "sourceMap": true
    },
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true
    },
    "include": [
      "src/**/*",
      "typings/**/*"
    ]
}